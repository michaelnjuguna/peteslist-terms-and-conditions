<%- include('partials/header')%>
<section class="admin-panel">
  <!-- add data -->

  <form action="/" method="post" class="add-form">
    <h1>Add Terms and Conditions</h1>
    <input
      type="text"
      name="title"
      placeholder="Type or paste the terms and conditions you want to add"
      required
    />
    <button type="submit">Add</button>
  </form>
  <form action="/delete" method="post" class="remove-form">
    <h1>Delete terms and Conditions</h1>
    <input
      type="text"
      name="title"
      placeholder="Type or Paste the terms and conditions you want to delete"
      required
    />
    <button type="submit">Remove</button>
  </form>
</section>

<%- include('partials/footer')%>
